<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitorSankhya">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/mainLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <TextView
                    style="@style/fontForLabels"
                    android:id="@+id/lblMonth"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Month:"
                    android:textStyle="bold"
                    />
                <TextView
                    style="@style/fontForLabels"
                    android:id="@+id/lblYear"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Year:"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/monthDropdown"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:textAlignment="textStart"></Spinner>
                <Spinner
                    android:id="@+id/yearDropdown"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="textStart"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                >
                <Button
                    android:id="@+id/btnReport"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Create Report"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:background="@drawable/bg_button2"
                    android:textColor="@android:color/holo_orange_dark"
                    />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>